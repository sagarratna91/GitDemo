import java.io.File;
import java.util.ArrayList;
import java.util.List;

public class ExcelFileExtractor {

    public static List<String> getExcelFileNames(String folderPath) {
        List<String> fileNames = new ArrayList<>();
        File folder = new File(folderPath);
        
        // Check if the folder exists and is a directory
        if (folder.exists() && folder.isDirectory()) {
            // List all files in the folder
            File[] files = folder.listFiles();
            if (files != null) {
                for (File file : files) {
                    // Filter files with ".xls" or ".xlsx" extensions
                    if (file.isFile() && (file.getName().endsWith(".xls") || file.getName().endsWith(".xlsx"))) {
                        fileNames.add(file.getName());
                    }
                }
            }
        } else {
            System.out.println("The provided path is not a valid folder.");
        }

        return fileNames;
    }

    public static void main(String[] args) {
        String folderPath = "C:\\path\\to\\your\\folder"; // Replace with your folder path
        List<String> excelFileNames = getExcelFileNames(folderPath);
        
        System.out.println("Excel Files in the Folder:");
        for (String fileName : excelFileNames) {
            System.out.println(fileName);
        }
    }
}